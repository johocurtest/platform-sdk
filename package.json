{
  "name": "@withthegrid/platform-sdk",
  "version": "10.4.0",
  "description": "SDK for withthegrid platform",
  "license": "MIT",
  "files": [
    "/esm",
    "/cjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/withthegrid/platform-sdk.git"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "start": "npm run watch-ts",
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "rm -rf cjs/ && tsc",
    "build:esm": "rm -rf esm/ && tsc -m es6 --outDir esm",
    "prepare": "npm run build",
    "postpublish": "npm publish --ignore-scripts --@withthegrid:registry='https://npm.pkg.github.com'",
    "watch-ts": "rm -rf esm/ && tsc -w",
    "lint": "npm run build:cjs && eslint \"src/*.{js,ts}\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "author": "Rob Everhardt <rob@withthegrid.com>",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@types/hapi__joi": "^16.0.10",
    "@types/node": "^13.7.1",
    "@types/qs": "^6.9.1",
    "axios": "^0.19.2",
    "qs": "^6.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
