{
  "name": "@withthegrid/platform-sdk",
  "version": "12.7.0",
  "description": "SDK for withthegrid application",
  "license": "MIT",
  "files": [
    "/esm",
    "/cjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/withthegrid/platform-sdk.git"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "start": "npm run watch-ts",
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "rm -rf cjs/ && tsc -p tsconfig.cjs.json",
    "build:esm": "rm -rf esm/ && tsc",
    "postpublish": "npm publish --ignore-scripts --tag latest --@withthegrid:registry='https://npm.pkg.github.com'",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "watch-ts": "rm -rf esm/ && tsc -w",
    "lint": "npm run build:cjs && eslint --ext .ts src",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "author": "Rob Everhardt <rob@withthegrid.com>",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/hapi__joi": "^17.1.4",
    "@types/node": "^14.0.23",
    "@types/qs": "^6.9.3",
    "axios": "^0.19.2",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
